    <script src="~/Scripts/knockout-3.4.2.debug.js"></script>
    @*<link rel="stylesheet" href="css/bootstrap.min.css" />*@
    
    <style type="text/css">
        #mypage {
            /*margin-left: 150px;*/
        }

        #content {
            padding-left: 0px;
            padding-right: 0px;
        }

        body {
            padding-top: 0px;
        }

        .pagediv {
            padding-left: 0px;
            padding-right: 0px;
        }

        #mysearch {
            width: 150px;
            margin-top: 0px;
            position: absolute;
            z-index: 1;
            height: 100%;
            /*设置右侧导航栏填满屏幕*/
        }

        #nav {
            height: 100%;
            /*background: #00B83F;*/
        }

        #content {
            background-color: #F5E79E;
            height: 100%;
        }

        #ul_nav {
            position: absolute;
            height: 100%;
        }
    </style>
    <script type="text/javascript">
        function ViewModel(model) {
            var self = this;
            //self.menuItems = ko.observableArray(model);
        }
        $(function () {
            var viewModel = new ViewModel(@BaseExpand.HtmlHelper.HtmlConvert2Json(Model))
            var myviewModel = { actions: @BaseExpand.HtmlHelper.HtmlConvert2Json(Model) };
            ko.applyBindings(myviewModel);
        })
    </script>
</head>

