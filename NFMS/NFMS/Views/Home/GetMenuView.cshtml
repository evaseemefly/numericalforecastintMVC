@model IEnumerable<NFMS.ViewModel.Bootstrap_TreeNode>
<div id="nav" class="col-md-2" style="padding-left: 0px;">
    <ul id="ul_nav" class="nav nav-pills nav-stacked navbar-inverse">
        <li>
            <div class="input-group">
                <input type="text" class="form-control" />
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-zoom-out"></span>
                    </button>
                </span>
            </div>
        </li>
        @foreach (var item in Model)
        {
            <li>
                <!--data-toggle，用于告诉 js需要对按钮做什么-->
                <!--collapse即是折叠-->
                <!--<a href="#sub1" data-toggle="collapse">系统功能</a>-->
                <!--data-target指示要切换到哪一个元素-->
                <a href="#" data-toggle="collapse" data-target="#sub@(item.id)">
                    @item.text
                    &nbsp;<span class="glyphicon glyphicon-cog"></span>
                </a>
                @*若当前item存在子节点
                    说明有子级节点*@
                @if (item.children.Count() > 0)
                {
                    <ul id="sub@(item.id)" class="nav collapse">
                        @foreach (var child in item.children)
                    {
                            <li>
                                <a href="#"><span class="glyphicon glyphicon-list-alt"></span>&nbsp;@child.text</a>
                            </li>
                        }

                    </ul>
                }

            </li>
        }
    </ul>
</div>
