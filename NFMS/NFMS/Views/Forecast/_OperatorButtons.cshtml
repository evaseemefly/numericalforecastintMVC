
<div class="panel panel-primary " style="margin-bottom: 0px;">
    <div class="panel-heading">预报信息</div>
    <div class="panel-body" style="padding:2px">
        <div class="form-horizontal col-md-12">
            <!--基础信息-->
            <div class="form-group col-md-3">
                <fieldset>
                    <legend>基础信息</legend>
                    <div class="form-group">
                        <div class="col-md-5">
                            <label class="col-md-12 control-label">时效</label>
                        </div>
                        <div class="col-md-7">
                            <select id="drops" class="form-control">
                                <option value="00" selected>00时</option>
                                <option value="06" selected>06时</option>
                                <option value="12" selected>12时</option>
                                <option value="18" selected>18时</option>
                            </select>
                        </div>

                    </div>
                    <div class="form-group" style="margin-bottom:2px">
                        <div class="col-md-5">
                            <label class="col-md-12 control-label">时间</label>
                        </div>
                        <div class="col-md-7">
                            <select id="drops" class="form-control">
                                <option value="00" selected>00时</option>
                            </select>
                        </div>

                    </div>
                </fieldset>
            </div>
            <!--预报信息-->
            <div class="form-group col-md-3">
                <fieldset>
                    <legend>预报信息</legend>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="col-md-12 control-label">预报要素</label>
                        </div>
                        <div class="col-md-6">
                            <select id="drops" class="form-control">
                                <option value="00" selected>风向</option>
                                <option value="06" selected>风速</option>
                                <option value="12" selected>潮位</option>
                                <option value="18" selected>波浪</option>
                            </select>
                        </div>

                    </div>
                    <div class="form-group" style="margin-bottom:2px">
                        <div class="col-md-6">
                            <label class="col-md-12 control-label">预报层级</label>
                        </div>
                        <div class="col-md-6">
                            <select id="drops" class="form-control">
                                <option value="00" selected>表面</option>
                                <option value="06" selected>水下</option>
                            </select>
                        </div>

                    </div>
                </fieldset>
            </div>
            <!--区域信息-->
            <div class="form-group col-md-5">
                <fieldset>
                    <legend>预报区域</legend>
                    <div class="form-group">
                        <div class="col-md-2" style="padding:4px">
                            <label class="col-md-12 control-label">经度</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" placeholder="起始" class="form-control col-md-4">
                        </div>
                        <div class="col-md-3">
                            <input type="text" placeholder="结束" class="form-control col-md-4">
                        </div>
                        <div class="col-md-4">
                            <!--<button class="btn btn-primary col-md-12">常用区域</button>-->
                            <!--注意此处在Button外侧不用再套一个div 因为会默认有一个padding-->
                            <!--<div class="btn-group col-md-12">-->
                            <button type="button" class="btn btn-primary dropdown-toggle col-md-12" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                常用区域 <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="#">北海</a>
                                </li>
                                <li>
                                    <a href="#">东海</a>
                                </li>
                                <li>
                                    <a href="#">南海</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="#">其他</a>
                                </li>
                            </ul>
                            <!--</div>-->
                        </div>
                    </div>
                    <div class="form-group" style="margin-bottom:2px">
                        <div class="col-md-2" style="padding:4px">
                            <label class="col-md-12 control-label">纬度</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" placeholder="起始" class="form-control col-md-4">
                        </div>
                        <div class="col-md-3">
                            <input type="text" placeholder="结束" class="form-control col-md-4">
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-success col-md-12">匡选区域</button>
                        </div>
                    </div>
                </fieldset>
            </div>
            <!--绘图按钮-->
            <div class="form-group col-md-1">
                <fieldset>
                    <legend>操作</legend>
                    <button class="btn btn-danger col-md-12 col-md-offset-5" style="height:85px;">绘图</button>
                    <!--<div class="form-group">

                    </div>-->
                </fieldset>

            </div>
        </div>
    </div>
    <!--<div class="panel-footer">页脚</div>-->
</div>

